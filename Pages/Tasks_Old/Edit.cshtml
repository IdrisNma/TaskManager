@page
@model TaskManager.Pages.Tasks.EditModel
@{
    ViewData["Title"] = "Edit Task";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">Edit Task</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="TaskItem.Id" />
                        <input type="hidden" asp-for="TaskItem.CreatedByUserId" />
                        <input type="hidden" asp-for="TaskItem.CreatedAt" />
                        
                        <div class="mb-3">
                            <label asp-for="TaskItem.Title" class="form-label"></label>
                            <input asp-for="TaskItem.Title" class="form-control" />
                            <span asp-validation-for="TaskItem.Title" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="TaskItem.Description" class="form-label"></label>
                            <textarea asp-for="TaskItem.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="TaskItem.Description" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TaskItem.DueDate" class="form-label"></label>
                                    <input asp-for="TaskItem.DueDate" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="TaskItem.DueDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TaskItem.Priority" class="form-label"></label>
                                    <select asp-for="TaskItem.Priority" class="form-select" asp-items="Html.GetEnumSelectList<TaskManager.Models.TaskPriority>()">
                                        <option selected="selected" value="">Choose priority...</option>
                                    </select>
                                    <span asp-validation-for="TaskItem.Priority" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TaskItem.Status" class="form-label"></label>
                                    <select asp-for="TaskItem.Status" class="form-select" asp-items="Html.GetEnumSelectList<TaskManager.Models.TaskStatus>()">
                                        <option selected="selected" value="">Choose status...</option>
                                    </select>
                                    <span asp-validation-for="TaskItem.Status" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TaskItem.AssignedToUserId" class="form-label">Assign To</label>
                                    <select asp-for="TaskItem.AssignedToUserId" class="form-select" asp-items="Model.Users">
                                        <option selected="selected" value="">Choose user...</option>
                                    </select>
                                    <span asp-validation-for="TaskItem.AssignedToUserId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="TaskItem.Notes" class="form-label"></label>
                            <textarea asp-for="TaskItem.Notes" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="TaskItem.Notes" class="text-danger"></span>
                        </div>
                        
                        @if (Model.TaskItem.Status == TaskManager.Models.TaskStatus.Completed && Model.TaskItem.CompletedAt.HasValue)
                        {
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle"></i> Task completed on @Model.TaskItem.CompletedAt.Value.ToString("MMM dd, yyyy 'at' hh:mm tt")
                            </div>
                        }
                        
                        <div class="d-flex justify-content-between">
                            <div>
                                <a asp-page="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Back to List
                                </a>
                                <a asp-page="./Details" asp-route-id="@Model.TaskItem.Id" class="btn btn-info">
                                    <i class="fas fa-eye"></i> Details
                                </a>
                            </div>
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Save Changes
                                </button>
                                <button type="submit" asp-page-handler="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this task?')">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}